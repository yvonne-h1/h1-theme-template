<ul class="collection-list grid grid-cols-12 items-end gap-x-4 gap-y-12">
  {%- for collection in collections -%}
    {%- if collection.all_products_count > 0 -%}
      <li class="col-span-6 md:col-span-4" style="--animation-delay: {{ forloop.index }};">
        {%- render 'collection-card', collection: collection, aspect_ratio: section.settings.image_ratio -%}
      </li>
    {%- endif -%}
  {%- endfor -%}
</ul>
