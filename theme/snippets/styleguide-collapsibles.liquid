<div>
  <h3 class="h5 mb-4">Collapsible</h3>
  <collapsible-component
    class="collapsible"
    data-options='
      {
        "closeSiblings": true
      }
    '>
    <div
      class="collapsible__group group block border-b border-t border-solid"
      data-collapsible-group>
      <button
        type="button"
        class="collapsible__trigger flex w-full items-center justify-between break-words border-0 bg-transparent px-0 py-3 text-left transition-colors hover:text-primary focus:text-primary"
        data-collapsible-trigger>
        Collapsible button 1
        <span class="collapsible__trigger-icons">
          {%- render 'icons', icon: 'plus', icon_class: 'w-3 block group-[.collapsible-is-open]:hidden' -%}
          {%- render 'icons', icon: 'minus', icon_class: 'w-3 hidden group-[.collapsible-is-open]:block' -%}
        </span>
      </button>
      <div
        class="collapsible__target rte max-w-none break-words"
        data-collapsible-target>
        <div class="p-0 pb-4">Collapsible content 1</div>
      </div>
    </div>
    <div
      class="collapsible__group group block border-b border-t-0 border-solid"
