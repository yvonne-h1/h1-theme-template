{%- liquid
  assign demo_collection = collections.all
-%}

{%- paginate demo_collection.products by 8 -%}
  <div class="grid gap-x-4 gap-y-10">
    {%- for product in demo_collection.products limit: 8 -%}
      <div class="col-span-6 md:col-span-4 lg:col-span-3">
        {%- render 'format-price', product: product -%}
      </div>
    {%- endfor -%}
  </div>
{%- endpaginate -%}
