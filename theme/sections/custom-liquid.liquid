{%- liquid
  if section.settings.format_container
    # Container class
    assign container_class = section.settings.container_width
    if section.settings.color_scheme != blank
      assign container_class = container_class | append: ' container--background my-0 ' | append: section.settings.color_scheme
    endif

    assign title_class = 'text-center ' | append: section.settings.heading_size

    # Render format container
    render 'render-container-content', class: container_class, title_class: title_class, title_tag: section.settings.heading_element, title: section.settings.heading, content: section.settings.custom_liquid

  else
    # Render without format container
    echo section.settings.custom_liquid
  endif
-%}

